{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trust.propdata.org.uk/schemas/PDTF-VerifiableCredential",
  "title": "PDTF Verifiable Credential Schema",
  "description": "Unified schema for all PDTF Verifiable Credentials following the PDTF v2 specification",
  "type": "object",
  "required": ["@context", "type", "issuer", "validFrom", "credentialSubject", "proof"],
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "anyOf": [
          {"type": "string"},
          {"type": "object"}
        ]
      },
      "contains": {
        "const": "https://trust.propdata.org.uk/contexts/pdtf-v2.jsonld"
      },
      "description": "JSON-LD contexts including PDTF context"
    },
    "id": {
      "type": "string",
      "format": "uri",
      "description": "URL to an accessible representation of the VC (subject to authorization controls)"
    },
    "type": {
      "type": "array",
      "items": {"type": "string"},
      "contains": {
        "const": "VerifiableCredential"
      },
      "description": "Type array including VerifiableCredential and PDTF-specific type"
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string", 
          "format": "uri",
          "description": "DID of the issuer"
        },
        {
          "type": "object",
          "required": ["id"],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri",
              "description": "DID of the issuer"
            }
          }
        }
      ],
      "description": "DID of the data source (trusted primary source, trusted proxy or participant)"
    },
    "validFrom": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time that the data was originally collected (not necessarily the credential issuance date)"
    },
    "validUntil": {
      "type": "string",
      "format": "date-time",
      "description": "Natural expiry date for the claims (e.g., EPC expiry)"
    },
    "credentialSubject": {
      "oneOf": [
        {
          "type": "object",
          "required": ["id"],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri",
              "description": "DID or URN identifier of the subject"
            }
          },
          "description": "Single credential subject"
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string",
                "format": "uri",
                "description": "DID or URN identifier of the subject"
              }
            }
          },
          "description": "Multiple credential subjects"
        }
      ],
      "description": "Subject(s) of the credential - entity type inferred from credential type"
    },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "Reference to the PDTF schema to validate against"
        },
        "type": {
          "type": "string",
          "enum": ["JsonSchema"]
        }
      },
      "description": "Schema reference for validation"
    },
    "credentialStatus": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {"type": "string"},
        "id": {"type": "string", "format": "uri"},
        "statusPurpose": {"type": "string"},
        "statusListIndex": {"type": "string"},
        "statusListCredential": {"type": "string", "format": "uri"}
      },
      "description": "Status information for revocation/lifecycle management"
    },
    "proof": {
      "type": "object",
      "required": ["type", "proofPurpose"],
      "properties": {
        "type": {
          "const": "DataIntegrityProof",
          "description": "Embedded proof type"
        },
        "proofPurpose": {
          "const": "assertionMethod",
          "description": "Proof purpose"
        },
        "verificationMethod": {
          "type": "string",
          "format": "uri",
          "description": "Key used for verification"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "jws": {
          "type": "string",
          "description": "JSON Web Signature"
        }
      },
      "description": "Embedded proof (digital signature) in accordance with the VC Data Integrity spec"
    },
    "termsOfUse": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "trustFramework", "confidentialityLevel"],
        "properties": {
          "type": {
            "const": "TrustFrameworkPolicy",
            "description": "Policy type"
          },
          "trustFramework": {
            "const": "PropertyDataTrustFramework",
            "description": "Trust framework identifier"
          },
          "confidentialityLevel": {
            "type": "string",
            "enum": ["Public", "Restricted", "Confidential"],
            "description": "Access level: Public (no auth), Restricted (verified participants), Confidential (specific roles)"
          },
          "requiredCredentials": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Required credentials/roles for access"
          },
          "pii": {
            "type": "boolean",
            "description": "Whether claims contain Personally Identifiable Information"
          }
        }
      },
      "description": "Access permissions and visibility controls"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "href"],
        "properties": {
          "type": {
            "const": "Hyperlink",
            "description": "Evidence type"
          },
          "href": {
            "type": "string",
            "format": "uri",
            "description": "Link to evidence resource"
          },
          "hash": {
            "type": "string",
            "description": "Hash of the evidence resource for integrity verification"
          },
          "mediaType": {
            "type": "string",
            "description": "MIME type of the evidence resource"
          }
        }
      },
      "description": "Array of hyperlinks to evidence resources"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "EntityReference": {
      "type": "string",
      "format": "uri",
      "description": "Reference to another entity (DID or URN)"
    },
    "PatchPath": {
      "type": "object",
      "patternProperties": {
        "^/": {
          "description": "JSON Pointer path relative to entity schema root"
        }
      },
      "description": "Patch paths for deeply-nested property attributes"
    },
    "MergeObject": {
      "type": "object",
      "description": "Object to merge with previously aggregated state"
    }
  }
}